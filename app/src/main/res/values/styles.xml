<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="News_Item_Title">
        <item name="android:textSize">@dimen/article_item_text_size_title</item>
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">4</item>
    </style>

    <style name="Secondary_Text">
        <item name="android:textSize">@dimen/article_item_text_size_secondary</item>
        <item name="android:textColor">@color/font_secondary</item>
    </style>

    <style name="RecyclerView_Style">
        <item name="android:paddingTop">@dimen/list_top_padding</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="ArticleText">
        <item name="android:textColor">@color/font_primary</item>
    </style>

    <style name="ArticleText.Title">
        <item name="android:textSize">@dimen/article_title_text_size</item>
    </style>

    <style name="ArticleText.Description">
        <item name="android:textSize">@dimen/article_content_text_size</item>
    </style>

    <style name="ArticleText.SourceLink">
        <item name="android:textSize">@dimen/article_source_link_text_size</item>
        <item name="android:textColor">@color/color_article_source_page</item>
        <item name="android:clickable">true</item>
    </style>
</resources>